{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "ignore": [
      "src/generated/",
      "src/tests",
      "src/graphql",
      "./Dockerfile",
      "./*.json",
      "*.config.js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "recommended": true
    }
  }
}
